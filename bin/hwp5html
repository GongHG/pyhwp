#!/bin/bash
SCRIPT=$(readlink -f $0)
SCRIPTPATH=$(dirname $SCRIPT)
BASEDIR=$SCRIPTPATH/..

HWPFILE=$1
FILENAME=$(basename $1)
FILENAMEBUTEXT=${FILENAME%.*}
mkdir -p $FILENAMEBUTEXT/bindata
for fn in `$BASEDIR/bin/hwp5file $HWPFILE list bindata`; do
	$BASEDIR/bin/hwp5file $HWPFILE BinData/$fn | $BASEDIR/bin/rawzlib > $FILENAMEBUTEXT/bindata/$fn &
done
$BASEDIR/bin/hwp5xml $HWPFILE | xmllint --format - > $FILENAMEBUTEXT/index.xml
xsltproc $BASEDIR/xslt/hwp5css.xsl $FILENAMEBUTEXT/index.xml > $FILENAMEBUTEXT/styles.css
xsltproc $BASEDIR/xslt/hwp5html.xsl $FILENAMEBUTEXT/index.xml | xmllint --format - > $FILENAMEBUTEXT/index.html
